<!doctype html>
<html lang="en">

<head>
    <title>Finterest</title>
    <%- include("Partials/Head") %>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body>
    <%- include("Partials/Nav") %>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-12">
                <div class="card-columns">
                    <% images.forEach((image) => { %>
                    <div class="card animated fadeInDown">
                        <img src="<%= image.path %>" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"> <%= image.title %> </h5>
                            <p class="card-text lead"> <%= image.description %> </p>
                            <p class="card-text"> <%= format(image.created_at) %> </p>
                            <a href="/image/<%= image._id %>" class="btn btn-outline-primary">View Profile</a>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>

        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->

</body>

</html>